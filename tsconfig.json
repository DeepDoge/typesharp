{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext"],
		"noEmit": true,
		"skipLibCheck": true,
		"removeComments": false,
		"sourceMap": true,
		/* STRICT */
		"strict": true,
		"useUnknownInCatchVariables": true,
		"noUncheckedIndexedAccess": true,

		"outDir": "out",
		"rootDir": "src"
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"],
	"references": [{ "path": "./client" }, { "path": "./server" }]
}
